<?xml version="1.0" encoding="UTF-8"?>

<!-- Lockheed C130 K Hercules. -->

<PropertyList include="c130-base.xml">

  <sim>

    <description>C130 K Hercules (YASim)</description>
    <flight-model>yasim</flight-model>
    <aero>c130k-yasim</aero>

    <model>
      <path>Aircraft/C130/Models/c130k.xml</path>
      <start-idling type="bool">false</start-idling>
      <livery>
        <file type="string">default</file>
      </livery>
    </model> 

    <startup>
      <splash-texture>Aircraft/C130/splash/c130k-splash.png</splash-texture>
    </startup>

    <sound>
      <audible>true</audible>
      <path>Aircraft/C130/Sounds/c130-sound.xml</path>
    </sound>

    <help>
      <title>C130 K Hercules</title>
      <key>
        <name>D</name>
        <desc>Open/Close backdoor</desc>
      </key>
      <key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>Ctrl-j</name>
        <desc>Parachutist</desc>
      </key>
    </help>

  </sim>

  <input>
    <keyboard include="Nasal/c130-keyboard.xml"/>
  </input>

  <systems>
    <refuel>
      <type type="string">probe</type>
    </refuel>
  </systems>
  
    <consumables>
        <fuel>
            <tank n="0">
                <name>Principaux d'extremites 1</name>
                <level-gal_us archive="y">200</level-gal_us>
            </tank>
            <tank n="1">
                <name>Principaux d'extremites 4</name>
                <level-gal_us archive="y">200</level-gal_us>
            </tank>
            <tank n="2">
                <name>Principaux interieurs 2</name>
                <level-gal_us archive="y">200</level-gal_us>
            </tank>
            <tank n="3">
                <name>Principaux interieurs 3</name>
                <level-gal_us archive="y">200</level-gal_us>
            </tank>
            <tank n="4">
                <name>Reservoirs auxiliaires 5</name>
                <level-gal_us archive="y">200</level-gal_us>
            </tank>
            <tank n="5">
                <name>Reservoirs auxiliaires 6</name>
                <level-gal_us archive="y">200</level-gal_us>
            </tank>
            <tank n="6">
                <name>Supplementaires sur pylones 7</name>
                <level-gal_us archive="y">0</level-gal_us>
            </tank>
            <tank n="7">
                <name>Supplementaires sur pylones 8</name>
                <level-gal_us archive="y">0</level-gal_us>
            </tank>
        </fuel>
    </consumables>

</PropertyList>

